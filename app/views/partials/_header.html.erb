<div class="bg-slate-800">
  <h1>CoolCat</h1>
  <% if current_user %>
    <p>You are a <%= current_user.role %> || <span id="user_email"><%= current_user.email %></span></p>
    <%= link_to 'Sign out', destroy_user_session_path, 'data-turbo-method': :delete  %>
