<div class="fixed left-0 right-0 bg-slate-800 h-14 text-slate-100 py-1 px-4 flex gap-1" id="header_partial">
  <%= link_to :root do %>
    <h1>CoolCat</h1>
  <% end %>
  <div class="ml-auto flex gap-2 items-center">
    <% if current_user %>
      <div>
        <% if(current_user.avatar.present?) %>
          <%= image_tag current_user.avatar.variant(:thumb), :class=>"header_avatar rounded-full inline" %>
        <% end %>
      </div>
        <div>
          <div></div><%= current_user.role %> | <span id="user_email"><%= current_user.email %></span>
          <div><%= link_to 'Sign out', destroy_user_session_path, 'data-turbo-method': :delete  %></div>
        </div>
      </div>
    <% else %>
      <%= link_to 'Sign up', new_user_registration_path %> || 
      <%= link_to 'Login', new_user_session_path %>
    <% end %>
  </div>
</div>
